<center>

<h1>Listing Users</h1>
 
<table width="80%">
  <tr>
    <th>Email</th>
    <th>Image</th>
    <th colspan="3">Options</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= Base64.decode64(user.image) %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user_path(user),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<br>
<%= link_to "New User", controller: "users", action: "new" %>
<%= link_to 'Home', controller: 'welcome' %>

</center>